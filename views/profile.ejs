<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("partials/header") %>
        <title>Login</title>
</head>

<body>
    <%- include ("partials/nav") %>
        <main class="container-lg py-5 d-flex justify-content-center flex-column align-items-center"
            style="max-width: 360px;">
            <table class="table text-center">
                <tr>
                    <th colspan="2">
                        <h3>
                            <%= user.name %>
                        </h3>
                    </th>
                </tr>
                <tr>
                    <td colspan="2"><img src="<%= user.thumbnail %>" alt="thumbnail" /></td>
                </tr>
                <tr>
                    <th scope="column">ID: </th>
                    <td scope="column">
                        <%= user.googleID %>
                    </td>
                </tr>
                <tr>
                    <th scope="column">加入時間: </th>
                    <td scope="column">
                        <%= user.date %>
                    </td>
                </tr>
            </table>
            <br>
            <h4 class="mt-4">貼文</h4>
            <% if(posts.length> 0){ %>
                <% for(let i=0; i < posts.length; i++){ %>
                    <div class="card mt-1" style="max-width: 360px;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= posts[i].title %>
                            </h5>
                            <p class="card-text">
                                <%= posts[i].content %>
                            </p>
                            <a href="#" class="btn btn-outline-primary">
                                <%= posts[i].date %>
                            </a>
                        </div>
                    </div>
                    <% } %>
                        <% } %>
